{% set address1 = metadata.company_info.physical_address.address1 %}
{% set city = metadata.company_info.physical_address.city %}
{% set state = metadata.company_info.physical_address.state %}
{% set zipcode = metadata.company_info.physical_address.zipcode %}

<footer>
	<div id="footer-top">
		<div class="container">
			<div class="row">
				<div class="col-lg-4 py-4 pr-lg-5">
					<h4>{{ metadata.footer.block_1.title }}</h4>
					<p>{{ metadata.footer.block_1.text }}</p>
					<a class="btn btn-primary" href="/about">Read More About Us<i class="fa fa-chevron-right ml-3"></i></a>
				</div>
				<div class="col-lg-4">
					<div class="form">
						<div class="top">Let Us Know How</div>
						<div class="bot">We Can Service You?</div>
						{% include "components/form-contact-footer.njk" %}
					</div>
				</div>
				<div class="col-lg-4 py-4 pl-lg-5">
					<h4>{{ metadata.footer.block_2.title }}</h4>
					<p>{{ metadata.footer.block_2.text }}</p>
					<a class="btn btn-primary" href="/testimonials">Read Testimonials<i class="fa fa-chevron-right ml-3"></i></a>
				</div>
			</div>
		</div>
	</div>
	<div id="footer-bottom">
		<div class="container py-4">
			<div class="d-lg-flex">
				<div class="d-sm-flex align-items-center mb-3 mb-lg-0">
					<span class="d-block d-sm-inline">&copy; Copyright {{ variables.date_year }}</span>
					<a href="/" class="ml-sm-2">{{ metadata.company_info.company_name }}</a>
				</div>
				<div class="ml-auto d-sm-flex align-items-center">
					<div class="d-sm-inline-block mb-3 mb-sm-0">
						<a href="{{metadata.company_info.physical_address.google_maps_link}}" class="text-dark">{{ address1 }}, {{ city }}, {{ state }} {{ zipcode }}</a>
						<i class="fa fa-circle px-2 hidden-xs-down"></i>
						<br class="hidden-sm-up">
						<a href="tel:{{ metadata.company_info.phone_number }}">{{ metadata.company_info.phone_number }}</span>
					</div>
					<div class="ml-sm-3 d-block d-sm-inline-block">
						<a target="social" href="{{ metadata.social_media.facebook_url }}">
							<i class="fa fa-2x fa-facebook-square" aria-hidden="true"></i>
							<span class="sr-only sr-only-focusable">Facebook</span>
						</a>
						<a target="social" href="{{ metadata.social_media.twitter_url }}">
							<i class="fa fa-2x fa-twitter-square" aria-hidden="true"></i>
							<span class="sr-only sr-only-focusable">Twitter</span>
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</footer>

<script src="/_includes/assets/js/jquery.min.js" defer></script>
<script src="/_includes/assets/js/bootstrap.min.js" defer></script>
<script src="/_includes/assets/js/scripts.js"></script>

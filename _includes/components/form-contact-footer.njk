<form name="contact-footer" class="mt-3" method="post" data-netlify="true">
	<div class="row">
		<div class="col-md-6 col-sm-12">
			<div class="form-group">
				<input type="text" class="form-control" name="first-name" id="first-name" maxlength="50" placeholder="First Name" />
			</div>
		</div>
		<div class="col-md-6 col-sm-12">
			<div class="form-group">
				<input type="text" class="form-control" name="last-name" id="last-name" maxlength="50" placeholder="Last Name" />
			</div>
		</div>
		<div class="col-md-6 col-sm-12">
			<div class="form-group">
				<input type="email" class="form-control" name="email-address" id="email-address" maxlength="100" placeholder="Email Address" />
			</div>
		</div>
		<div class="col-md-6 col-sm-12">
			<div class="form-group">
				<input type="tel" class="form-control" name="phone-number" id="phone-number" maxlength="20" placeholder="Phone Number" />
			</div>
		</div>
		<div class="col-md-12 col-sm-12">
			<div class="form-group">
				<textarea class="form-control" name="comments" id="comments" cols="10" rows="4" maxlength="2000" placeholder="Comments"></textarea>
			</div>
		</div>
		<div class="col-md-12 col-sm-12">
			<div class="form-group text-center">
				<input class="btn btn-primary" type="submit" value="Submit" />
			</div>
		</div>
	</div>
</form>

<div class="row">
	<div class="col-sm-8">
		<form name="contact" method="post" data-netlify="true">
			<div class="row">
				<div class="col-sm-6">
					<div class="form-group">
						<label for="first-name">First Name <span class="req">*</span></label>
						<input required type="text" name="first-name" id="first-name" class="form-control" maxlength="50">
					</div>
				</div>
				<div class="col-sm-6">
					<div class="form-group">
						<label for="last-name">Last Name <span class="req">*</span></label>
						<input required type="text" name="last-name" id="last-name" class="form-control" maxlength="50">
					</div>
				</div>
				<div class="col-sm-6">
					<div class="form-group">
						<label for="email-address">Email Address <span class="req">*</span></label>
						<input required type="text" name="email-address" id="email-address" class="form-control" maxlength="255">
					</div>
				</div>
				<div class="col-sm-6">
					<div class="form-group">
						<label for="phone-number">Phone Number <span class="req">*</span></label>
						<input required type="text" name="phone-number" id="phone-number" class="form-control" maxlength="20">
					</div>
				</div>
				<div class="col-12">
					<div class="form-group">
						<label for="address">Address <span class="req">*</span></label>
						<input required type="text" name="address" id="address" class="form-control" maxlength="50">
					</div>
				</div>
				<div class="col-12">
					<div class="row">
						<div class="col-sm-6">
							<div class="form-group city">
								<label for="city">City <span class="req">*</span></label>
								<input required type="text" name="city" id="city" class="form-control" maxlength="100">
							</div>
						</div>
						<div class="col-sm-3 p-0">
							<div class="form-group state">
								<label for="state">State <span class="req">*</span></label>
								<input required type="text" name="state" id="state" class="form-control" maxlength="LA">
							</div>
						</div>
						<div class="col-sm-3">
							<div class="form-group zipcode">
								<label for="zipcode">Zipcode <span class="req">*</span></label>
								<input required type="text" name="zipcode" id="zipcode" class="form-control" maxlength="10">
							</div>
						</div>
					</div>
				</div>
				<div class="col-sm-6">
					<div class="form-group">
						<label for="request-type">Request Type</label>
						<select name="request-type" class="form-control">
							<option value="">-- SELECT --</option>
							<option value="Service">Service</option>
							<option value="Maintenance">Maintenance</option>
							<option value="Installation">Installation</option>
							<option value="Repair">Repair</option>
							<option value="Air Conditioning">Air Conditioning</option>
							<option value="Heating">Heating</option>
							<option value="Zoning">Zoning</option>
							<option value="Ductless Systems">Ductless Systems</option>
							<option value="Generators">Generators</option>
							<option value="Blown Insulation">Blown Insulation</option>
							<option value="Solar Panel Systems">Solar Panel Systems</option>
							<option value="Indoor Air Quality">Indoor Air Quality</option>
							<option value="Metal Fabrication">Metal Fabrication</option>
							<option value="Other">Other</option>
						</select>
					</div>
				</div>
				<div class="col-sm-6">
					<div class="form-group">
						<label>Location Type</label>
						<label class="font-weight-normal mb-0">
							<input type="radio" name="location-type" class="mr-2" value="Home">Home
						</label>
						<label class="font-weight-normal mb-0">
							<input type="radio" name="location-type" class="mr-2" value="Business">Business
						</label>
					</div>
				</div>
				<div class="col-12">
					<div class="form-group">
						<label for="message">How can we help you? <span class="req">*</span></label>
						<textarea required name="message" id="message" class="form-control" cols="10" rows="4" maxlength="1000"></textarea>
					</div>
				</div>
				<div class="col-12">
					<div class="form-group mb-0 text-right">
						<input class="btn btn-primary btn-lg" type="submit" value="Submit">
					</div>
				</div>
			</div>
		</form>		
	</div>
</div>
